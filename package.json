{
  "name": "mcp-playwrigth-prompts",
  "version": "1.0.0",
  "description": "Este repositorio proporciona **prompts personalizados**, **instrucciones**, y **configuración de chat** para integrar **GitHub Copilot** con **MCP de Playwright** (Model Context Protocol) para automatización de pruebas.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:chromium": "playwright test --project=chromium",
    "test:ci": "playwright test --project=chromium",
    "test:auth": "playwright test tests/example.spec.js --project=chromium",
    "test:checkout": "playwright test tests/example.spec.js --project=chromium",
    "test:membership": "playwright test tests/example.spec.js --project=chromium",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "clean": "rm -rf playwright-report test-results allure-results allure-report",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RocioCruzS/mcp-Playwrigth-prompts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/RocioCruzS/mcp-Playwrigth-prompts/issues"
  },
  "homepage": "https://github.com/RocioCruzS/mcp-Playwrigth-prompts#readme",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "eslint": "^9.39.1",
    "eslint-plugin-playwright": "^2.3.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
